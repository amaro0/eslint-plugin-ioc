{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "noImplicitOverride": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ],
}
